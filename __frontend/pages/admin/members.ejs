<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!--<script type="text/javascript" src="/static/js/admin.js"></script>-->
  <!-- Bootstrap CSS -->
  <%- include ('../include/bootstrap/bootstrap.css.ejs'); -%>
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/footer.css">
    <link rel="stylesheet" href="/static/css/admin/members.css">
    <script src="/static/js/admin/members.js"></script>

    <title>API Members</title>
</head>

<body>
  <%- include ('../include/nav.ejs'); -%>
    <main role="main">

      <h1 class="mb-5 text-center">Tous les membres</h1>
      <div class="wrapper">
        <div class="search-input">
          <a href="" target="_blank" hidden></a>
          <form action="/admin/members/search" method="GET">
            <input type="text" placeholder="Rechercher un membre.." name="search" <%if(search){%>value="<%=search%>"
              <%}%>>
          </form>
          <div class="autocom-box">
          </div>
          <div class="icon"><i class="fas fa-search"></i></div>
        </div>
      </div>
      <div id="table-members">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Avatar</th>
              <th scope="col">Pseudos</th>
              <th scope="col">Date d'inscription</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>

            <% members.forEach(element=> { %>
              <% const account_date=new Date(parseInt(element.member_account_date)) %>
                <% const months=['01','02','03','04','05','06','07','08','09','10','11','12']; %>
                  <% const year=account_date.getFullYear() %>
                    <% const month=months[account_date.getMonth()] %>
                      <% const date=account_date.getDate() %>
                        <tr>
                          <td> <img src="/uploads/avatars/<%=element.member_avatar%>" class="avatar"></td>
                          <td>
                            <%= element.member_pseudo %>
                          </td>
                          <td>
                            <%= `${date}/${month}/${year}` %>
                          </td>
                          <td> <a class="button button-primary mt-3"
                              href="/admin/members/update/<%=element.member_id%>">Modiffier </a> <a
                              class="button button-danger mt-3"
                              href="/admin/members/update/<%=element.member_id%>">Supprimer </a></td>
                        </tr>
                        <% }) %>
          </tbody>
        </table>
      </div>

      <div id="center">
        <a href="#" class="button button-info" id="precedent">
          < Précédent</a>
            <a href="#" class="button button-info" id="suivant">Suivant ></a>
      </div>
      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    </main>
    <%- include ('../include/footer.ejs'); -%>
      <%- include ('../include/bootstrap/bootstrap.js.ejs'); -%>

</body>

</html>