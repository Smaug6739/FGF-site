<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--<script type="text/javascript" src="/static/js/admin.js"></script>-->
    <!-- Bootstrap CSS -->
    <%- include ('../include/bootstrap/bootstrap.css.ejs'); -%>
    <link rel="stylesheet" href="/static/css/main.css">
    <link  rel="stylesheet" href="/static/css/footer.css">
    <title>FGF Forum</title>
  </head>
  <body>
    <%- include ('../include/nav.ejs'); -%>


    <h1>Bienvenue sur le Forum de la FGF</h1>
    <form action="/forum" method="post" class="mt-5" id="create_form" enctype="multipart/form-data">
      <fieldset class="form-group">
          <legend>Nouveau sujet</legend>
          <div class="form-group d-flex flex-column">
              <label for="categorie">Cat√©gorie de votre topic :</label>
              <select id="categorie" name="categorie">
                  <option value="1">Console</option>
                  <option value="2">Jeux</option>
                  <option value="3">Informatique</option>
                  <option value="4">Musique</option>
                  <option value="5">Partenaires</option>
                  <option value="6">Divers</option>
              </select>
          </div>
          <legend>Votre topic</legend>
            <div class="form-group d-flex flex-column">
              <label for="name">Le titre de votre topic</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Titre">
              <label style="font-size:20px;" for="content">Topic :</label>
              <textarea type="hidden" name="content" id="content"></textarea>
              <button id="btn_submit" type="submit" class="btn btn-primary">Envoyer</button>
            </div>
      </fieldset>

  </form>
    <%- include ('../include/footer.ejs'); -%>
    <%- include ('../include/bootstrap/bootstrap.js.ejs'); -%>
  </body>
</html>