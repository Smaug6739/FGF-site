<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--<script type="text/javascript" src="/static/js/admin.js"></script>-->
    <!-- Bootstrap CSS -->
    <%- include ('../include/bootstrap/bootstrap.css.ejs'); -%>
    <link rel="stylesheet" href="/static/css/main.css">
    <link  rel="stylesheet" href="/static/css/footer.css">
    <link  rel="stylesheet" href="/static/css/forum/categorie.css">
    <script  src="/static/js/forum/categorie.js"></script>
    <title>FGF Forum</title>
  </head>
  <body>
    
    <%- include ('../include/nav.ejs'); -%>
  <div id="container">
    <% if(topics[0]){ %>
      <h3 class="title-categorie">Forum <%= topics[0].cat_nom %></h3>
      <div id="container-table">
      <table id="table-forums" class="table table-striped">
          <th scope="col">Sujets</th>
          <th scope="col" class="author-column">Auteur</th>
          <th scope="col" class="cat-column">Catégorie</th>
          <% topics.forEach(topic => { %>
              <tr>
                  <td><a href="/forum/topic/<%=topic.topic_id%>/1"><%=topic.topic_titre.substring(0,65)%></a></td>
                  <td class="author-column"><%=topic.member_pseudo%></td>
                  <td class="cat-column"><%=topic.cat_nom%></td>
              </tr>
          <% }); %>
      </table>
      </div>
    <% }else{ %>
              <h2>Aucun topic</h2>
         <% } %>
            <div id="container-form-message">
            <fieldset class="form-group">
              <legend>Nouveau topic :</legend>
                  <form action="/forum/topic/<%=categorieId%>" id="post" method="POST">
                    <input id="title" name="title" class="form-control" placeholder="Titre"><br>
                    <textarea id="content" class="form-control" name="content" placeholder="Votre message ici"></textarea><br>
                    <button id="send" class="btn btn-success">Send</button>
                  </form>
            </fieldset>
          </div>
          <div id="center">
            <a href="#" class="btn btn-info" id="precedent">< Précédent</a>
            <a href="#" class="btn btn-info" id="suivant">Suivant ></a>
          </div>
  </div>
    <%- include ('../include/footer.ejs'); -%>
    <%- include ('../include/bootstrap/bootstrap.js.ejs'); -%>
  </body>
</html>
