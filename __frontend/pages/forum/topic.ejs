    <title>FGF Forum</title>
  </head>
  <body>
    <%- include ('../include/nav.ejs'); -%>


    <% console.log(topic) %>
    <div class="container">
        <div id="container-messages">
        <% topic.forEach(element => {%>
            <div class="author-infos"><p><%=element.member_pseudo%></p></div>
            <p class="message"><%=element.post_texte%></p>
            <hr>
        
        </div>
        <div class="jumbotron">
            <div class = "form-message">
                <form action="/forum/message/<%=element.topic_id%>" method="post">
                    <textarea id = "content" class="form-control" placeholder="Votre rÃ©ponce"cols="30" rows="5" name="content"></textarea>
                    <button type="submit" class="btn btn-success" id="send">Poster</button>
                <% }); %>
                </form>
            </div>
        </div>
    </div>
    

    <%- include ('../include/footer.ejs'); -%>
    <%- include ('../include/bootstrap/bootstrap.js.ejs'); -%>
  </body>
