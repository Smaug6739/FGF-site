<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%- include ('../include/bootstrap/bootstrap.css.ejs'); -%>
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/footer.css">
    <script src="/static/js/img-preview.js"></script>
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script>
      function onSubmit(token) {
        document.getElementById("form_album").submit();
      }
    </script>
    <title>French Gaming Family</title>
</head>

<body>
  <%- include ('../include/nav.ejs'); -%>
    <main role="main">

      <h1 class="mb-5 text-center">Espace de r√©daction</h1>
      <div class="container-fluid">
        <section>
          <form action="/member/album" method="post" class="mt-5" id="form_album" enctype="multipart/form-data">

            <fieldset class="form-group">
              <legend>Votre article</legend>
              <div class="form-group d-flex flex-column">
                <label for="title">Le titre de votre image</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Titre">
                <label class="custom-file-upload" for="album-upload">
                  <input id="album-upload" type="file" onchange="preview_image(event,'album-form')"
                    name="album-upload" />
                  Choisir un fichier
                </label>
                <img style="width:30%;height:30%;" id="album-form">

                <h6>Poster votre image :</h6>
                <button id="button_submit" type="submit" class="button button-primary g-recaptcha"
                  data-sitekey="6LcgLPIUAAAAAE3WY-fLlh4HjVM6yiY7NNa0mETn" data-callback='onSubmit'
                  data-action='submit'>Envoyer</button>

            </fieldset>

          </form>
        </section>

      </div>
    </main>
    <%- include('../include/footer.ejs') %>
      <%- include ('../include/bootstrap/bootstrap.js.ejs'); -%>


</body>

</html>























