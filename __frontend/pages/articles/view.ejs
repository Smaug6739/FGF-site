<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%- include ('../include/bootstrap/bootstrap.css.ejs'); -%>

    <link  rel="stylesheet" href="/static/css/main.css">
    <link  rel="stylesheet" href="/static/css/footer.css">
    <link  rel="stylesheet" href="/static/css/articles/articles.css">
    <title>API Members</title>
  </head>
  <body>
    <%- include ('../include/nav.ejs'); -%>

    <div class="container-fluid">
        <div id="article">
          <div id="container">
            <img id="img-article" src="/uploads/articles/<%=article.lien_miniature%>">
            <%  const date_insert = new Date(parseInt(article.date_insert)) %>
            <%  var months = ['01','02','03','04','05','06','07','08','09','10','11','12'];  %>
            <%  const year = date_insert.getFullYear() %>
            <%  const month = months[date_insert.getMonth()] %>
            <%  const date = date_insert.getDate() %>
            <div id="ligne-1"><h5 class="title"><%=article.title%></h5><p class="date"><%=date%>/<%=month%>/<%=year%></p></div>
            <div id="separation"><hr></div>
            <div class="content"><%- article.content %></div>
          </div>
        </div>
  </div>




  

    <%- include('../include/footer.ejs') %>
    <%- include ('../include/bootstrap/bootstrap.js.ejs'); -%>

  </body>
</html>